<Window x:Class="AsyncTasks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AsyncTasks" Height="250" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Name="btnStartCount" Content="Start Counting" Click="btnStartCount_Click" Margin="10"/>
            <Button Name="btnCancel" Content="Cancel" Click="btnCancel_Click" Margin="10" IsEnabled="False"/>
            <TextBlock Name="txtCountResult" FontSize="16" Margin="10" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>